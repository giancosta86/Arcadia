---
layout: null
---
[
{% assign poems =
    site.posts
        | where_exp:
            "post",
            "post.layout == 'poem'"
%}

{% for poem in  poems %}
    {
        "title": "{{ poem.title }}",

        "date": "{{
            poem.date
            | date: '%F'
            }}",

        "url": "{{
            poem.url
            | prepend: site.baseurl
            | prepend: site.url
            }}"
    }
    {% unless forloop.last %},{% endunless %}
{% endfor %}
]